<h1>Paragraph: <%= @episode.title %></h1>

<%= link_to "Episode page", admin_episode_path(@episode) %>

<h2>Summary</h2>
<span class="timestamp" style="color: #999; background: #EEE">[<%= @paragraph.timestamp %>]</span>
<span class="speaker" style="color: #999"><%= @paragraph.speaker.name %>:</span>
<span class="text"><%= @paragraph.text %></span>

<div class="side-by-side">
  <div>
    <h2>Slices</h2>

    <table class="codes">
      <% @paragraph.slices.each do |slice| %>
        <tr>
          <td><code><%= slice[0] %></code></td>
          <td><code><%= slice[1] %></code></td>
          <td><code><%= slice[2] %></code></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div>
    <h2>Segments</h2>

    <table class="codes">
      <% @paragraph.segments.each do |segment| %>
        <tr>
          <td><code><%= segment.timestamp_string %></code></td>
          <td><code><%= segment.text %></code></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
